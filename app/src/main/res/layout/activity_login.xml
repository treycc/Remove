<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_hi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="36dp"
            android:background="@mipmap/bg_company"/>

        <TextView
            style="@style/font_3_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="房屋征收信息系统"
            android:textStyle="bold"/>


        <com.kingja.supershapeview.view.SuperShapeEditText
            android:id="@+id/set_login_accountName"
            style="@style/font_f_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:hint="用户名"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            app:super_cornerRadius="50dp"
            app:super_solidColor="@color/gray_hi"/>

        <com.kingja.supershapeview.view.SuperShapeEditText
            android:id="@+id/set_login_password"
            style="@style/font_f_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:hint="密码"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            app:super_cornerRadius="50dp"
            app:super_solidColor="@color/gray_hi"/>

        <com.kingja.supershapeview.view.SuperShapeTextView
            android:id="@+id/stv_login_confirm"
            style="@style/font_f_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="登录"
            app:super_cornerRadius="50dp"
            app:super_solidColor="@color/main"/>

    </LinearLayout>

    <TextView
        style="@style/font_6_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="2018®浙江健德普信息科技有限公司"/>
</RelativeLayout>