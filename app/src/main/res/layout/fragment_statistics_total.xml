<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.jdp.hls.view.FixedListView
            android:id="@+id/flv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_hi"
            android:divider="@color/div_hi"
            android:dividerHeight="1px"
            android:listSelector="@android:color/transparent"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            tools:listitem="@layout/item_statistics_total"/>

        <TextView
            style="@style/Title_Main"
            android:text="支付信息"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="应付金额"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_payableAmount"
                style="@style/Content_ET_W1_3"
                android:hint=""
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="已付金额"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_paidAmount"
                style="@style/Content_ET_W1_3"
                android:hint=""
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="未付金额"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_balanceAmount"
                style="@style/Content_ET_W1_3"
                android:hint=""
                android:inputType="numberDecimal"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>


