<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_hi"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <TextView
            style="@style/Title_Main"
            android:text="基本信息"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="鉴定人"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_age_realName"
                style="@style/Content_ET_W1"
                android:hint=""/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="总未登记面积(m²)"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_age_totalNotRecordArea"
                style="@style/Content_ET_W1"
                android:hint="请输入面积"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="棚面积(m²)"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_age_shedArea"
                style="@style/Content_ET_W1"
                android:hint="请输入面积"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="简面积(m²)"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_age_"
                style="@style/Content_ET_W1"
                android:hint="请输入面积"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>


        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="坐落地址"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/et_age_Address"
                style="@style/Content_ET_W1"
                android:text=""/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="鉴定单位"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/et_age_companyName"
                style="@style/Content_ET_W1"
                android:text=""/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="鉴定时间"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.jdp.hls.view.StringTextView
                    android:id="@+id/tv_age_date"
                    style="@style/font_9_15_eet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint=""/>

                <ImageView
                    android:id="@+id/iv_dateSelector"
                    style="@style/BG_DATE_SELECTOR"/>


            </RelativeLayout>


        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>


        <TextView
            style="@style/Title_Main"
            android:text="认定信息"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="总认定合法(m²)"/>

            <TextView
                android:id="@+id/tv_age_totalLegalArea"
                style="@style/Content_ET_W1"
                android:text="0"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">


            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_age_before90Area"
                style="@style/Content_ET_W1"
                android:hint="请输入面积"/>

            <TextView
                style="@style/font_9_15"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="90档(m²)"/>

        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">


            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_age_asLegitimateArea"
                style="@style/Content_ET_W1"
                android:hint="请输入面积"/>

            <TextView
                style="@style/font_9_15"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="视同合法(m²)"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="总认定不合法(m²)"/>

            <TextView
                android:id="@+id/tv_age_totalNoLegalArea"
                style="@style/Content_ET_W1"
                android:text="0"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">


            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_age_after90Area"
                style="@style/Content_ET_W1"
                android:hint="请输入面积"/>

            <TextView
                style="@style/font_9_15"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="90后(m²)"/>

        </LinearLayout>


        <TextView
            style="@style/Title_Main"
            android:text="认定资料"/>

        <include layout="@layout/layout_photo_preview"/>

        <TextView
            style="@style/Title_Main"
            android:text="备注"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_hi"
            android:paddingBottom="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp">

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_remark"
                style="@style/font_9_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_hi"
                android:gravity="start"
                android:hint="请输入备注"
                android:lines="3"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

