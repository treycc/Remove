<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_hi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/Title_Main"
            android:text="基本信息"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="档案编号"/>

            <TextView
                style="@style/Content_ET_W3"
                android:text="J012"/>
        </LinearLayout>

        <View
            style="@style/div_hor_gray"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="户主姓名"/>

            <TextView
                style="@style/Content_ET_W3"
                android:text="王小虎"/>
        </LinearLayout>

        <View
            style="@style/div_hor_gray"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="地址"/>

            <TextView
                style="@style/Content_ET_W3"
                android:text="温州龙湾"/>
        </LinearLayout>

        <View
            style="@style/div_hor_gray"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <RelativeLayout
            android:id="@+id/rl_business_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp">

            <TextView
                style="@style/font_6_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="具体信息"/>

            <ImageView
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/arrow_right"/>
        </RelativeLayout>

        <TextView
            style="@style/Title_Main"
            android:text="流程节点"/>

        <ListView
            android:id="@+id/lv_flow_node"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            tools:listitem="@layout/item_flow_node"/>

    </LinearLayout>


</ScrollView>