<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_hi"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <TextView
        style="@style/Title_Main"
        android:text="基本信息"/>

    <LinearLayout
        style="@style/Content_LL_T6">

        <com.jdp.hls.view.RequiredTextView
            style="@style/Title_Sub"
            android:text="开户姓名"/>

        <com.jdp.hls.view.EnableEditText
            android:id="@+id/et_land_realName"
            style="@style/Content_ET_W2"
            android:hint="请输入开户姓名"/>
    </LinearLayout>

    <View style="@style/div_hor_gray_margin24"/>

    <LinearLayout
        style="@style/Content_LL_T6">

        <com.jdp.hls.view.RequiredTextView
            style="@style/Title_Sub"
            android:text="发卡银行"/>

        <com.jdp.hls.view.EnableEditText
            android:id="@+id/et_land_certArea"
            style="@style/Content_ET_W2"
            android:hint="请输入发卡银行"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <View style="@style/div_hor_gray_margin24"/>

    <LinearLayout
        style="@style/Content_LL_T6">

        <com.jdp.hls.view.RequiredTextView
            style="@style/Title_Sub"
            android:text="银行账号"/>

        <com.jdp.hls.view.EnableEditText
            android:id="@+id/et_land_totalArea"
            style="@style/Content_ET_W2"
            android:hint="请输入银行卡卡号"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <include layout="@layout/layout_remark"/>

    <TextView
        style="@style/Title_Main"
        android:text="银行卡照片"/>

    <include layout="@layout/layout_photo_preview"/>


    <include layout="@layout/layout_remark_title"/>
</LinearLayout>