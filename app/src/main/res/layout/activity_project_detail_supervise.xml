<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_hi"
        android:orientation="vertical">


        <TextView
            style="@style/Title_Main"
            android:text="项目信息"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="项目名称"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_projectName"
                style="@style/Content_ET_W1_5_LINES"
                android:text="鹿城拆迁项目"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="项目地址"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_address"
                style="@style/Content_ET_W1_5_LINES"
                android:text="鹿城区"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <com.jdp.hls.view.FixedListView
            android:id="@+id/flv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_hi"
            android:divider="@color/div_hi"
            android:dividerHeight="1px"
            android:listSelector="@android:color/transparent"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <TextView
            style="@style/Title_Main"
            android:text="项目统计"/>

        <RelativeLayout
            android:id="@+id/rl_statistics_progress"
            style="@style/Container_Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_hi">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="8dp"
                    android:background="@mipmap/ic_statistics_progress"/>

                <TextView
                    style="@style/font_6_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="进度统计"/>

            </LinearLayout>


            <ImageView
                style="@style/BG_ARROW"/>

        </RelativeLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <RelativeLayout
            android:id="@+id/rl_statistics_total"
            style="@style/Container_Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_hi">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="8dp"
                    android:background="@mipmap/ic_statistics_total"/>

                <TextView
                    style="@style/font_6_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="汇总统计"/>

            </LinearLayout>


            <ImageView
                style="@style/BG_ARROW"/>

        </RelativeLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <RelativeLayout
            android:id="@+id/rl_statistics_table"
            style="@style/Container_Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_hi">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="8dp"
                    android:background="@mipmap/ic_statistics_table"/>

                <TextView
                    style="@style/font_6_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="征收一览表"/>

            </LinearLayout>


            <ImageView
                style="@style/BG_ARROW"/>

        </RelativeLayout>
        <View style="@style/div_hor_gray_margin24"/>

        <RelativeLayout
            android:id="@+id/rl_statistics_contrast"
            style="@style/Container_Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_hi">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="8dp"
                    android:background="@mipmap/ic_contrast"/>

                <TextView
                    style="@style/font_6_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="新旧对比"/>

            </LinearLayout>


            <ImageView
                style="@style/BG_ARROW"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>