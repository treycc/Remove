<?xml version="1.0" encoding="utf-8"?>
<com.jdp.hls.view.DrawHelperLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawHelperLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_hi">

    <LinearLayout
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_hi"
                android:orientation="horizontal"
                android:padding="12dp">

                <com.jdp.hls.view.StringTextView
                    android:id="@+id/tv_name"
                    style="@style/font_3_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="雨果"/>
                <LinearLayout
                    android:id="@+id/ll_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.jdp.hls.view.StringTextView
                        android:id="@+id/tv_mobile"
                        style="@style/font_9_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18888888888"/>

                </LinearLayout>
            </RelativeLayout>

            <View style="@style/div_hor_gray"/>

            <LinearLayout
                android:id="@+id/ll_setMain"
                android:gravity="center"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/iv_main"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/ic_confirm_nor"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>

                <TextView
                    style="@style/font_6_12"
                    android:id="@+id/tv_setMain"
                    android:text="设为主联系人"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="12dp"
            android:background="@mipmap/ic_arrow_right"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/red_hi">

        <TextView
            android:id="@+id/tv_delete"
            style="@style/font_f_15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="删除"/>

    </LinearLayout>
</com.jdp.hls.view.DrawHelperLayout>