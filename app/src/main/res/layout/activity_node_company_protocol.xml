<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_hi"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <TextView
            style="@style/Title_Main"
            android:text="补偿信息"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="档案编号"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_protocol_cusCode"
                style="@style/Content_ET_W1"
                android:hint=""/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>
        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="总建筑面积"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_protocol_totalBuildingArea"
                style="@style/Content_ET_W1"
                android:hint=""/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>
        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="总未登记面积"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_protocol_totalNotRecordArea"
                style="@style/Content_ET_W1"
                android:hint=""/>
        </LinearLayout>
        <View style="@style/div_hor_gray_margin24"/>
        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="土地记载面积"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_protocol_landCertArea"
                style="@style/Content_ET_W1"
                android:hint=""/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>


        <TextView
            style="@style/Title_Main"
            android:text="补偿信息"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="总土地安置面积"/>

            <com.jdp.hls.view.EnableEditText
                android:inputType="numberDecimal"
                android:id="@+id/et_protocol_totalLandAZArea"
                style="@style/Content_ET_W1"
                android:hint="请输入总土地安置面积"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>
        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="功能性置换面积"/>

            <com.jdp.hls.view.EnableEditText
                android:inputType="numberDecimal"
                android:id="@+id/et_protocol_changeArea"
                style="@style/Content_ET_W1"
                android:hint="请输入功能性置换面积"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>
        <LinearLayout
            style="@style/Content_LL_T0">

            <TextView
                style="@style/Title_Sub"
                android:text="补偿方式"/>

            <com.jdp.hls.view.KSpinner
                android:id="@+id/spinner_payType"
                style="@style/Content_ET_W1"
                android:hint="请选择"
                app:backgroundSelector="@drawable/sel_t2g"
                app:textTint="@color/c_9"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>
        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="应交购地房款"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_protocol_needPayAmount"
                style="@style/Content_ET_W1"
                android:hint=""/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">
            <com.jdp.hls.view.EnableEditText
                android:inputType="numberDecimal"
                android:id="@+id/et_protocol_totalPurchasePrice"
                style="@style/Content_ET_W1"
                android:hint="请输入总购地金额"/>
            <TextView
                style="@style/Title_Sub"
                android:text="总购地金额"/>

        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>
        <LinearLayout
            style="@style/Content_LL_T6">
            <com.jdp.hls.view.EnableEditText
                android:inputType="numberDecimal"
                android:id="@+id/et_protocol_totalPay"
                style="@style/Content_ET_W1"
                android:hint="请输入总赔偿金额"/>
            <TextView
                style="@style/Title_Sub"
                android:text="总补偿金额"/>

        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="货币补偿总金额"/>

            <com.jdp.hls.view.EnableEditText
                android:inputType="numberDecimal"
                android:id="@+id/et_protocol_damagesAmount"
                style="@style/Content_ET_W1"
                android:hint="请输入货币补偿总金额"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>
        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="清障补助"/>

            <com.jdp.hls.view.EnableEditText
                android:inputType="numberDecimal"
                android:id="@+id/et_protocol_clearObstaclePay"
                style="@style/Content_ET_W1"
                android:hint="请输入金额"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>


        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="搬迁费"/>

            <com.jdp.hls.view.EnableEditText
                android:inputType="numberDecimal"
                android:id="@+id/et_protocol_removeFee"
                style="@style/Content_ET_W1"
                android:hint="请输入金额"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="临时安置费"/>

            <com.jdp.hls.view.EnableEditText
                android:inputType="numberDecimal"
                android:id="@+id/et_protocol_tempPlacementFee"
                style="@style/Content_ET_W1"
                android:hint="请输入金额"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="其它补偿"/>

            <com.jdp.hls.view.EnableEditText
                android:inputType="numberDecimal"
                android:id="@+id/et_protocol_otherFee"
                style="@style/Content_ET_W1"
                android:hint="请输入金额"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="坐落地址"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_protocol_address"
                style="@style/Content_ET_W1"
                android:hint=""/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="生成日期"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_protocol_date"
                    style="@style/font_9_15_eet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""/>

                <ImageView
                    android:id="@+id/iv_dateSelector"
                    style="@style/BG_DATE_SELECTOR"/>


            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_protocol_otherArea"
            style="@style/Container_Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_hi">

            <TextView
                style="@style/font_6_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="其它面积"/>

            <ImageView
                style="@style/BG_ARROW"/>

        </RelativeLayout>

        <TextView
            style="@style/Title_Main"
            android:text="协议资料"/>

        <include layout="@layout/layout_photo_preview"/>

        <TextView
            style="@style/Title_Main"
            android:text="备注"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_hi"
            android:paddingBottom="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp">

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_remark"
                style="@style/font_9_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_hi"
                android:gravity="start"
                android:hint="请输入备注"
                android:lines="3"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

