<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_hi"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white_hi"
        android:padding="12dp">

        <TextView
            style="@style/font_6_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="推送消息"/>

        <CheckBox
            android:id="@+id/cb_setting_jpush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View style="@style/div_hor_gray"/>

    <RelativeLayout
        android:id="@+id/rl_setting_modifypwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_hi"
        android:padding="12dp">


        <TextView
            style="@style/font_6_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="更改密码"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/arrow_right"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setting_suggest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white_hi"
        android:padding="12dp">


        <TextView
            style="@style/font_6_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="意见及建议"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/arrow_right"/>

    </RelativeLayout>

    <View style="@style/div_hor_gray"/>

    <RelativeLayout
        android:id="@+id/rl_setting_aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_hi"
        android:padding="12dp">


        <TextView
            style="@style/font_6_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="关于我们"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/arrow_right"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setting_clearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white_hi"
        android:padding="12dp">


        <TextView
            style="@style/font_6_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清理缓存"/>

        <TextView
            android:id="@+id/tv_setting_cache"
            style="@style/font_9_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="12M"/>

    </RelativeLayout>

    <View style="@style/div_hor_gray"/>

    <com.kingja.supershapeview.view.SuperShapeTextView
        android:id="@+id/stv_setting_quit"
        style="@style/font_f_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="退出"
        app:super_cornerRadius="4dp"
        app:super_solidColor="@color/main"/>
</LinearLayout>