<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_hi"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <TextView
            style="@style/Title_Main"
            android:text="基本信息"/>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="测绘人"/>

            <TextView
                android:id="@+id/tv_mapping_realName"
                style="@style/Content_ET_W1"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="总建筑面积(m²)"/>

            <TextView
                android:id="@+id/tv_mapping_totalArea"
                style="@style/Content_ET_W1"
                android:inputType="numberDecimal"
                android:hint="自动计算"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">
            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_mapping_propertyCertTotalArea"
                style="@style/Content_ET_W1"
                android:hint=""/>
            <TextView
                style="@style/Title_Sub"
                android:text="房产记载面积"/>


        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>
        <LinearLayout
            style="@style/Content_LL_T6">
            <com.jdp.hls.view.EnableEditText
                android:inputType="numberDecimal"
                android:id="@+id/et_mapping_totalNotRecordArea"
                style="@style/Content_ET_W1"
                android:hint="请输入总未登记面积"/>
            <TextView
                style="@style/Title_Sub"
                android:text="总未登记面积"/>


        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>
        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="土地记载面积"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_mapping_landCertTotalArea"
                style="@style/Content_ET_W1"
                android:hint=""/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="简易房面积"/>

            <com.jdp.hls.view.EnableEditText
                android:inputType="numberDecimal"
                android:id="@+id/et_mapping_simpleHouseArea"
                style="@style/Content_ET_W1"
                android:hint="请输入简易房面积"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="坦面积"/>

            <com.jdp.hls.view.EnableEditText
                android:inputType="numberDecimal"
                android:id="@+id/et_mapping_tanArea"
                style="@style/Content_ET_W1"
                android:hint="请输入请输入"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="棚面积"/>

            <com.jdp.hls.view.EnableEditText
                android:inputType="numberDecimal"
                android:id="@+id/et_mapping_shedArea"
                style="@style/Content_ET_W1"
                android:hint="请输入棚面积"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="坐落地址"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_mapping_address"
                style="@style/Content_ET_W1_LINES"
                android:hint=""/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_hi"
            android:gravity="center_vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp">

            <TextView
                style="@style/Title_Sub"
                android:text="测绘日期"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_mapping_date"
                    style="@style/font_9_15_eet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/iv_dateSelector"
                    style="@style/BG_DATE_SELECTOR"/>


            </RelativeLayout>


        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <TextView
            style="@style/Title_Main"
            android:text="测绘资料"/>

     <include layout="@layout/layout_photo_preview"/>

        <TextView
            style="@style/Title_Main"
            android:text="备注"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_hi"
            android:paddingBottom="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp">

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_remark"
                style="@style/font_9_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_hi"
                android:gravity="start"
                android:hint="请输入备注"
                android:lines="3"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

