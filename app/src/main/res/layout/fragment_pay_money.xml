<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="旧房市场总价"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_oldHouseMarketTotalMoney"
                style="@style/Content_ET_W1_5"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="装修"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_innerDecorateMoney"
                style="@style/Content_ET_W1_5"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="附属物"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_appurtenancePay"
                style="@style/Content_ET_W1_5"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="空翻补偿"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_kongFanPayAmount"
                style="@style/Content_ET_W1_5"
                android:hint="请输入空翻补偿"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="拆迁奖励"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_pulledDownPayAmount"
                style="@style/Content_ET_W1_5"
                android:hint="请输入拆迁奖励"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="其它补偿"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_otherFee"
                style="@style/Content_ET_W1_5"
                android:hint="请输入其它补偿"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="临时安置费"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_tempPlacementFee"
                style="@style/Content_ET_W1_5"
                android:hint="请输入临时安置费"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="搬迁费"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_removeFee"
                style="@style/Content_ET_W1_5"
                android:hint="请输入搬迁费"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>
        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="回迁费"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_moveBackFee"
                style="@style/Content_ET_W1_5"
                android:hint="请输入回迁费"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="货币退购总金额"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_totalBackPay"
                style="@style/Content_ET_W1_5"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="固定设施报销费"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_fixedFacilitiesAmount"
                style="@style/Content_ET_W1_5"
                android:hint="请输入固定设施报销费"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="空翻面积"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_protocol_otherArea"
                style="@style/Content_ET_W1_5"
                android:hint="请输入空翻面积"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="超审批占地面积"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_protocol_overAuditArea"
                style="@style/Content_ET_W1_5"
                android:hint="请输入超审批占地面积"
                android:inputType="numberDecimal"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>