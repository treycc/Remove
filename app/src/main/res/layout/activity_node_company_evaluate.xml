<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_hi"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <TextView
            style="@style/Title_Main"
            android:text="基本信息"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="评估人"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_mapping_realName"
                style="@style/Content_ET_W1"
                android:hint=""/>
        </LinearLayout>

        <View
            style="@style/div_hor_gray"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="资产评估总额(¥)"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_totalMoney"
                style="@style/Content_ET_W1"
                android:text="0"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_evaluate_nonMobileDevicePay"
                style="@style/Content_ET_W1"
                android:hint="请输入金额"/>

            <TextView
                style="@style/font_9_15"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="不可移动设备补偿"/>

        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">


            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_evaluate_mobileDevicePay"
                style="@style/Content_ET_W1"
                android:hint="请输入金额"/>

            <TextView
                style="@style/font_9_15"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="可移动设备补偿"/>
        </LinearLayout>

        <View
            style="@style/div_hor_gray"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="房地产评估总额(¥)"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_totalProperty"
                style="@style/Content_ET_W1"
                android:text="0"/>
        </LinearLayout>

        <View
            style="@style/div_hor_gray"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            style="@style/Content_LL_T6">


            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_evaluate_legalLandPay"
                style="@style/Content_ET_W1"
                android:hint="请输入金额"/>

            <TextView
                style="@style/font_9_15"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="合法土地补偿"/>

        </LinearLayout>

        <View
            style="@style/div_hor_gray"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            style="@style/Content_LL_T6">


            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_evaluate_legalBuildingPay"
                style="@style/Content_ET_W1"
                android:hint="请输入金额"/>

            <TextView
                style="@style/font_9_15"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="合法建筑补偿"/>

        </LinearLayout>

        <View
            style="@style/div_hor_gray"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            style="@style/Content_LL_T6">


            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_evaluate_legalDecorationPay"
                style="@style/Content_ET_W1"
                android:hint="请输入金额"/>

            <TextView
                style="@style/font_9_15"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="合法装修补偿"/>

        </LinearLayout>

        <View
            style="@style/div_hor_gray"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            style="@style/Content_LL_T6">


            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_evaluate_appurtenancePay"
                style="@style/Content_ET_W1"
                android:hint="请输入金额"/>

            <TextView
                style="@style/font_9_15"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="附属物补偿"/>

        </LinearLayout>

        <View
            style="@style/div_hor_gray"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="坐落地址"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_evaluate_address"
                style="@style/Content_ET_W1"
                android:hint="请输入地址"/>
        </LinearLayout>

        <View
            style="@style/div_hor_gray"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="评估单位"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_evaluate_companyName"
                style="@style/Content_ET_W1"
                android:hint="请输入地址"/>
        </LinearLayout>

        <View
            style="@style/div_hor_gray"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_hi"
            android:gravity="center_vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp">

            <TextView
                style="@style/Title_Sub"
                android:text="评估日期"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.jdp.hls.view.StringTextView
                    android:id="@+id/tv_evaluate_date"
                    style="@style/font_9_15_eet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""/>

                <ImageView
                    android:id="@+id/iv_dateSelector"
                    style="@style/BG_DATE_SELECTOR"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            style="@style/div_hor_gray"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <TextView
            style="@style/Title_Main"
            android:text="房屋装修及附属物补偿"/>

        <RelativeLayout
            android:id="@+id/rl_evaluate_innerDecoratedDetail"
            style="@style/Content_LL_T12">

            <TextView
                style="@style/font_6_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内装修装饰明细表"/>

            <ImageView style="@style/BG_ARROW"/>
        </RelativeLayout>

        <View
            style="@style/div_hor_gray"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <RelativeLayout
            android:id="@+id/rl_evaluate_appurtenanceDetail"
            style="@style/Content_LL_T12">

            <TextView
                style="@style/font_6_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附属物及其他构筑物明细表"/>

            <ImageView style="@style/BG_ARROW"/>
        </RelativeLayout>

        <TextView
            style="@style/Title_Main"
            android:text="评估资料"/>

        <include layout="@layout/layout_photo_preview"/>

        <TextView
            style="@style/Title_Main"
            android:text="备注"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_hi"
            android:paddingBottom="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp">

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_remark"
                style="@style/font_9_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_hi"
                android:gravity="start"
                android:hint="请输入备注"
                android:lines="3"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

