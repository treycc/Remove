<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_hi"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="套型"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="数量(套)"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="面积(m²)"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/div_hi"
        android:dividerHeight="1px"
        android:listSelector="@android:color/transparent"
        tools:listitem="@layout/item_taotype_area"/>

    <View style="@style/div_hor_gray_6"/>

    <LinearLayout
        style="@style/Content_LL_T6">

        <TextView
            style="@style/Title_Sub"
            android:text="协议内面积"/>

        <com.jdp.hls.view.StringTextView
            android:id="@+id/tv_totalArea"
            style="@style/Content_ET_W1_8"
            android:hint="0"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <View style="@style/div_hor_gray_margin24"/>

    <LinearLayout
        style="@style/Content_LL_T6">

        <TextView
            style="@style/Title_Sub"
            android:text="套型差面积"/>

        <com.jdp.hls.view.StringTextView
            android:id="@+id/tv_leftArea"
            style="@style/Content_ET_W1_8"
            android:hint="0"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <View style="@style/div_hor_gray_margin24"/>
    <LinearLayout
        style="@style/Content_LL_T6">

        <com.jdp.hls.view.StringTextView
            style="@style/Title_Sub"
            android:text="需安置面积"/>

        <com.jdp.hls.view.StringTextView
            android:id="@+id/tv_hasDealTaoArea"
            style="@style/Content_ET_W1_8"
            android:hint="0"
            android:inputType="numberDecimal"/>
    </LinearLayout>





</LinearLayout>