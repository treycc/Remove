<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_hi"
    android:descendantFocusability="blocksDescendants"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_roster_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">


            <com.jdp.hls.view.RequiredTextView
                style="@style/font_6_13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="户主"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_roster_name"
                    style="@style/font_9_13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:text=""/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/arrow_right"/>

            </LinearLayout>
        </LinearLayout>

        <View style="@style/div_hor_gray"/>

        <LinearLayout
            android:id="@+id/ll_roster_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">


            <com.jdp.hls.view.RequiredTextView
                style="@style/font_6_13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="地址"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_roster_address"
                    style="@style/font_9_13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:text=""/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/arrow_right"/>


            </LinearLayout>


        </LinearLayout>

        <View style="@style/div_hor_gray"/>

        <LinearLayout
            android:id="@+id/ll_roster_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">


            <com.jdp.hls.view.RequiredTextView
                style="@style/font_6_13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="性别"/>

            <FrameLayout
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <lib.kingja.switchbutton.SwitchMultiButton
                    android:id="@+id/smb_roster_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    app:strokeRadius="4dp"
                    app:strokeWidth="1dp"
                    app:selectedTab="0"
                    app:selectedColor="@color/main"
                    app:switchTabs="@array/switch_gender"
                    app:textSize="14sp" />
            </FrameLayout>




        </LinearLayout>

        <View style="@style/div_hor_gray"/>

        <LinearLayout
            android:id="@+id/ll_roster_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">

            <TextView
                style="@style/font_6_13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="手机"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_roster_phone"
                    style="@style/font_9_13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:text=""/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/arrow_right"/>
            </LinearLayout>
        </LinearLayout>

        <View style="@style/div_hor_gray"/>

        <LinearLayout
            android:id="@+id/ll_roster_idcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">

            <TextView
                style="@style/font_6_13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="身份证"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_roster_idcard"
                    style="@style/font_9_13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:text=""/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/arrow_right"/>
            </LinearLayout>
        </LinearLayout>

        <View style="@style/div_hor_gray"/>

        <LinearLayout
            android:id="@+id/ll_roster_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">

            <TextView
                style="@style/font_6_13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="类型"/>

            <FrameLayout
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <lib.kingja.switchbutton.SwitchMultiButton
                    android:id="@+id/smb_roster_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    app:strokeRadius="4dp"
                    app:strokeWidth="1dp"
                    app:selectedTab="0"
                    app:selectedColor="@color/main"
                    app:switchTabs="@array/switch_roster_type"
                    app:textSize="14sp" />
            </FrameLayout>
        </LinearLayout>

        <View style="@style/div_hor_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">


            <TextView
                style="@style/font_6_13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="是否丈量"/>

            <FrameLayout
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <lib.kingja.switchbutton.SwitchMultiButton
                    android:id="@+id/smb_roster_measured"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    app:strokeRadius="4dp"
                    app:strokeWidth="1dp"
                    app:selectedTab="0"
                    app:selectedColor="@color/main"
                    app:switchTabs="@array/switch_measure"
                    app:textSize="14sp" />
            </FrameLayout>


        </LinearLayout>

        <View style="@style/div_hor_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">


            <TextView
                style="@style/font_6_13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="是否评估"/>

            <FrameLayout
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <lib.kingja.switchbutton.SwitchMultiButton
                    android:id="@+id/smb_roster_evaluated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    app:strokeRadius="4dp"
                    app:strokeWidth="1dp"
                    app:selectedTab="0"
                    app:selectedColor="@color/main"
                    app:switchTabs="@array/switch_evaluated"
                    app:textSize="14sp" />
            </FrameLayout>

        </LinearLayout>

        <View style="@style/div_hor_gray"/>

        <LinearLayout
            android:id="@+id/ll_roster_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_roster_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/arrow_right"/>

        </LinearLayout>
        <View style="@style/div_hor_gray"/>

        <LinearLayout
            android:id="@+id/ll_roster_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">


            <TextView
                style="@style/font_6_13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="定位"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_roster_location"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@mipmap/ic_location"/>
            </LinearLayout>


        </LinearLayout>

        <View style="@style/div_hor_gray"/>

        <fragment
            android:id="@+id/fragment_lnglat"
            android:name="com.jdp.hls.fragment.LngLatFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <View style="@style/div_hor_gray"/>

        <LinearLayout
            android:id="@+id/ll_roster_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">

            <TextView
                style="@style/font_6_13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="备注"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_roster_remark"
                    style="@style/font_9_13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:text=""/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/arrow_right"/>
            </LinearLayout>
        </LinearLayout>

        <View style="@style/div_hor_gray"/>
    </LinearLayout>
</ScrollView>