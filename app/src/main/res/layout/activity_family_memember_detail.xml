<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_hi"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <TextView
        style="@style/Title_Main"
        android:text="基本信息"/>
    <LinearLayout
        style="@style/Content_LL_T6">

        <TextView
            style="@style/Title_Sub"
            android:text="户号"/>

        <com.jdp.hls.view.EnableEditText
            android:id="@+id/et_familyRelation_bookletNum"
            style="@style/Content_ET_W2"
            android:hint="请输入户号"/>
    </LinearLayout>

    <View style="@style/div_hor_gray_margin24"/>
    <LinearLayout
        style="@style/Content_LL_T6">

        <TextView
            style="@style/Title_Sub"
            android:text="姓名"/>

        <com.jdp.hls.view.EnableEditText
            android:id="@+id/et_familyRelation_name"
            style="@style/Content_ET_W2"
            android:hint="请输入姓名"/>
    </LinearLayout>

    <View style="@style/div_hor_gray_margin24"/>

    <LinearLayout
        style="@style/Content_LL_T0">

        <TextView
            style="@style/Title_Sub"
            android:text="称谓"/>

        <com.jdp.hls.view.KSpinner
            android:id="@+id/spinner_familyMemember_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="请选择称谓"
            android:padding="0dp"
            app:backgroundSelector="@drawable/sel_t2g"
            app:textTint="@color/c_9"/>
    </LinearLayout>

    <View style="@style/div_hor_gray_margin24"/>

    <LinearLayout
        style="@style/Content_LL_T0">

        <TextView
            style="@style/Title_Sub"
            android:text="性别"/>

        <com.jdp.hls.view.KSpinner
            android:id="@+id/spinner_familyMemember_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="请选择性别"
            app:backgroundSelector="@drawable/sel_t2g"
            app:textTint="@color/c_9"/>
    </LinearLayout>

    <View style="@style/div_hor_gray_margin24"/>

    <LinearLayout
        style="@style/Content_LL_T0">

        <TextView
            style="@style/Title_Sub"
            android:text="农业/非农业"/>

        <com.jdp.hls.view.KSpinner
            android:id="@+id/spinner_familyMemember_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="请选择户口类型"
            app:backgroundSelector="@drawable/sel_t2g"
            app:textTint="@color/c_9"/>
    </LinearLayout>

    <View style="@style/div_hor_gray_margin24"/>

    <LinearLayout
        style="@style/Content_LL_T6">

        <TextView
            style="@style/Title_Sub"
            android:text="身份证号"/>

        <com.jdp.hls.view.EnableEditText
            android:id="@+id/et_familyRelation_idcard"
            style="@style/Content_ET_W2"
            android:hint="请输入身份证号"/>
    </LinearLayout>
</LinearLayout>