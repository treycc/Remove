<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_hi"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <com.jdp.hls.view.StringTextView
            style="@style/Title_Main"
            android:text="基本信息"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <com.jdp.hls.view.StringTextView
                style="@style/Title_Sub"
                android:text="评估机构"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_companyName"
                style="@style/Content_ET_W1"
                android:hint=""/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <com.jdp.hls.view.StringTextView
                style="@style/Title_Sub"
                android:text="评估人"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_realName"
                style="@style/Content_ET_W1"
                android:hint=""/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <com.jdp.hls.view.StringTextView
                style="@style/Title_Sub"
                android:text="评估日期"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.jdp.hls.view.StringTextView
                    android:id="@+id/tv_evalDate"
                    style="@style/font_9_15_eet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint=""/>

                <ImageView
                    android:id="@+id/iv_dateSelector"
                    style="@style/BG_DATE_SELECTOR"/>

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            style="@style/Content_LL_T6">

            <com.jdp.hls.view.StringTextView
                style="@style/Title_Sub"
                android:text="房地产评估总额"/>

            <com.jdp.hls.view.StringTextView
                android:id="@+id/tv_assetEvaluatAmount"
                style="@style/Content_ET_W1"
                android:hint=""/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub9"
                android:text="合法土地补偿"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_legalLandPay"
                style="@style/Content_ET_W1"
                android:hint="请输入金额"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub9"
                android:text="合法建筑补偿"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_legalBuildingPay"
                style="@style/Content_ET_W1"
                android:hint="请输入金额"
                android:inputType="numberDecimal"/>
        </LinearLayout>
        <View style="@style/div_hor_gray_margin24"/>
        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub9"
                android:text="合法装修补偿"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_legalDecorationPay"
                style="@style/Content_ET_W1"
                android:hint="请输入金额"
                android:inputType="numberDecimal"/>
        </LinearLayout>
        <View style="@style/div_hor_gray_margin24"/>
        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub9"
                android:text="附属物及构建物补偿"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_appurtenancePay"
                style="@style/Content_ET_W1"
                android:hint="请输入金额"
                android:inputType="numberDecimal"/>
        </LinearLayout>
        <View style="@style/div_hor_gray_margin24"/>

        <com.jdp.hls.view.StringTextView
            style="@style/Title_Main"
            android:text="评估资料"/>

        <include layout="@layout/layout_photo_preview"/>

        <include layout="@layout/layout_remark_title"/>

    </LinearLayout>
</ScrollView>

