<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_hi"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View style="@style/div_hor_gray"/>

    <LinearLayout
        android:background="@color/white_hi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_tab_map"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_tab_map"
                android:background="@mipmap/ic_tab_home_sel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_tab_map"
                style="@style/font_main_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_tab_message"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_tab_message"
                android:background="@mipmap/ic_tab_msg_nor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_tab_message"
                style="@style/font_9_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tab_mine"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_tab_mine"
                android:background="@mipmap/ic_tab_mine_nor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_tab_mine"
                style="@style/font_9_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>