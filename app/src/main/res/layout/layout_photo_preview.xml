<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_photo_preview"
    style="@style/Content_LL_T12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_hi">

    <ImageView
        android:id="@+id/iv_arrow_right"
        style="@style/BG_ARROW"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <com.jdp.hls.view.PreviewRecyclerView
        android:id="@+id/rv_photo_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/iv_arrow_right"/>

</RelativeLayout>