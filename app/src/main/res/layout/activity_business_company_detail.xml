<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_hi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            style="@style/Title_Main"
            android:text="基本信息"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="档案编号"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_detail_cusCode"
                style="@style/Content_ET_W2"
                android:hint="请输入档案编号"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="企业名称"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_detail_EnterpriseName"
                style="@style/Content_ET_W2"
                android:hint="请输入企业名称"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="现住地址"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_detail_address"
                style="@style/Content_ET_W2"
                android:hint="请输入现状门牌号"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="负责人姓名"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_detail_RealName"
                style="@style/Content_ET_W2"
                android:hint="请输入负责人姓名"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="负责人电话"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_detail_MobilePhone"
                style="@style/Content_ET_W2"
                android:hint="请输入负责人电话"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="企业经营情况"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_detail_bizInfo"
                style="@style/Content_ET_W2"
                android:hint="请输入企业经营情况"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            style="@style/Content_LL_T6">

            <TextView
                style="@style/Title_Sub"
                android:text="出租情况"/>

            <com.jdp.hls.view.EnableEditText
                android:id="@+id/et_detail_rentInfo"
                style="@style/Content_ET_W2"
                android:hint="请输入出租情况"/>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>
        <LinearLayout style="@style/Content_LL_T12">

            <TextView
                style="@style/Title_Sub"
                android:text="是否公示"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <Switch
                    android:id="@+id/switch_detail_publicity"
                    style="@style/KSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="否"
                    android:textOn="是"/>
            </LinearLayout>


        </LinearLayout>

        <TextView
            style="@style/Title_Main"
            android:text="房产信息"/>

        <LinearLayout
            android:id="@+id/ll_detail_licenseDeed"
            style="@style/Content_LL_T12">

            <TextView
                style="@style/Title_Sub"
                android:text="营业执照"/>

            <RelativeLayout style="@style/Rl_Container_Arrow_W2">

                <TextView
                    android:id="@+id/tv_detail_businessDeed"
                    style="@style/font_9_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="1"/>

                <ImageView style="@style/BG_ARROW"/>
            </RelativeLayout>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            android:id="@+id/ll_detail_propertyDeed"
            style="@style/Content_LL_T12">

            <TextView
                style="@style/Title_Sub"
                android:text="产权证"/>

            <RelativeLayout style="@style/Rl_Container_Arrow_W2">

                <TextView
                    android:id="@+id/tv_detail_propertyDeed"
                    style="@style/font_9_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="1"/>

                <ImageView style="@style/BG_ARROW"/>
            </RelativeLayout>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            android:id="@+id/ll_detail_landDeed"
            style="@style/Content_LL_T12">

            <TextView
                style="@style/Title_Sub"
                android:text="土地证"/>

            <RelativeLayout style="@style/Rl_Container_Arrow_W2">

                <TextView
                    android:id="@+id/tv_detail_landDeed"
                    style="@style/font_9_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="1"/>

                <ImageView style="@style/BG_ARROW"/>
            </RelativeLayout>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <LinearLayout
            android:id="@+id/ll_detail_immovableDeed"
            style="@style/Content_LL_T12">

            <TextView
                style="@style/Title_Sub"
                android:text="不动产证"/>

            <RelativeLayout style="@style/Rl_Container_Arrow_W2">

                <TextView
                    android:id="@+id/tv_detail_immovableDeed"
                    style="@style/font_9_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="1"/>

                <ImageView style="@style/BG_ARROW"/>
            </RelativeLayout>
        </LinearLayout>

        <View style="@style/div_hor_gray_margin24"/>

        <TextView
            style="@style/Title_Normal"
            android:text="房屋现状图"/>

        <View style="@style/div_hor_gray_margin24"/>

        <include layout="@layout/layout_photo_preview"/>

        <View style="@style/div_hor_gray_margin24"/>

        <TextView
            style="@style/Title_Normal"
            android:text="备注"/>

        <EditText
            android:id="@+id/et_detail_remark"
            style="@style/font_9_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@null"
            android:gravity="start"
            android:hint="请输入备注"
            android:lines="4"/>

        <TextView
            style="@style/Title_Main"
            android:text="定位"/>

    </LinearLayout>


</ScrollView>